
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow create/update only if the device ID is not being changed once set.
      allow write: if request.auth != null && request.auth.uid == userId
                  && (resource == null || resource.data.registeredDeviceId == null || request.resource.data.registeredDeviceId == resource.data.registeredDeviceId);
    }
  }
}
